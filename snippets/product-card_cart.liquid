<style>
  .cart-card {
    display: grid;
    grid-template-columns: 225px 1fr;
    gap: 1rem;

    background: #373737;
    border-radius: 25px;
    padding: 20px;

    position: relative;
  }

  .cart-card__url {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .cart-img-con {
  }

  .cart-card__img {
    width: 100%;
    border-radius: 15px;
  }

  .cart-card__content {
    display: flex;
    flex-direction: column;
  }
</style>

<div class="cart-card">
  <a class="cart-card__url" href="{{ item.url }}"></a>
  <div class="cart-img-con">
    <img
      class="cart-card__img"
      src="{{ item.image | image_url: width: 600 }}"
      alt=""
    >
  </div>

  <div class="cart-card__content">
    <span>{{ item.title }}</span>
    <span>STEAM</span>

    <div>
      <div>DEL - {{ item.quantity }}</div>

      <span style="text-decoration: line-through;">
        {{ item.variant.compare_at_price | money_without_trailing_zeros }}
      </span>

      <span>{{ item.variant.price | money_without_trailing_zeros }}</span>
    </div>
  </div>
</div>
